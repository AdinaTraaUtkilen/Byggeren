{
  "version": 4,
  "configurations": [
    {
      "name": "AVR-ATmega162",
      "compilerPath": "/usr/bin/avr-gcc",   // Linux: `which avr-gcc`
      // macOS (Homebrew): "/opt/homebrew/bin/avr-gcc"
      // Windows (avr-gcc toolchain): "C:/avr8-gnu-toolchain/bin/avr-gcc.exe"
      "intelliSenseMode": "gcc-x64",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "defines": [
        "__AVR__", 
        "__AVR_ATmega162__", 
        "F_CPU=16000000UL"    // juster for faktisk klokkehastighet
      ],
      "includePath": [
        "${workspaceFolder}/src",
        "/usr/lib/avr/include",         // Linux
        "/usr/lib/gcc/avr/**"
        // macOS (Homebrew):
        // "/opt/homebrew/Cellar/avr-gcc/*/avr/include",
        // "/opt/homebrew/Cellar/avr-gcc/*/lib/gcc/avr/**"
        // Windows (avr8-gnu-toolchain):
        // "C:/avr8-gnu-toolchain/avr/include",
        // "C:/avr8-gnu-toolchain/lib/gcc/avr/**"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}/src",
          "/usr/lib/avr/include",
          "/usr/lib/gcc/avr"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}
